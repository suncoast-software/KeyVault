<UserControl
    x:Class="KeyVault.View.SingleAccountRowItem"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:vm="clr-namespace:KeyVault.ViewModel"
    xmlns:local="clr-namespace:KeyVault.View"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Width="190"
    Height="58"
    mc:Ignorable="d">

    <Grid Background="#131212"
          Margin="4 4">
        <Grid.RowDefinitions>
            <RowDefinition Height="30" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <TextBlock
                Grid.Row="0"
                Text="{Binding Path=Name, UpdateSourceTrigger=PropertyChanged, Mode=OneWay}"
                FontSize="18"
                Foreground="#BB9900"/>
        <TextBlock Grid.Row="1"
                   Text="{Binding Path=Url, UpdateSourceTrigger=PropertyChanged, Mode=OneWay}"
                   FontSize="16"
                   Foreground="Blue"
                   VerticalAlignment="Center"/>
    </Grid>
</UserControl>
